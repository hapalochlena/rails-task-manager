<h1>Tasks</h1>

<h2><%= link_to 'Create a new task', new_task_path %></h2>

<% @tasks.each do |task| %>
  <h3><%= link_to "#{task.title}", task_path(task) %></h3>
  <p><%= task.completed %></p>
  <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
<% end %>
